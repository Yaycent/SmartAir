<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    tools:context=".ChildDashboardActivity"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/childDashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/childdashboard"
        android:textSize="24sp"

        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintBottom_toTopOf="@+id/buttonRescue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/buttonRescue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/rescue_med"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/childDashboardTitle" />

    <Button
        android:id="@+id/buttonController"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/button_controller"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRescue"
        app:layout_constraintVertical_bias="0.045" />

    <TextView
        android:id="@+id/feelingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feelings_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"

        app:layout_constraintTop_toBottomOf="@id/buttonController"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textPreFeelingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pre_feeling_label"
        android:textSize="16sp"
        android:layout_marginTop="12dp"

        app:layout_constraintTop_toBottomOf="@id/feelingTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/spinnerPreFeeling"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"

        app:layout_constraintTop_toBottomOf="@id/textPreFeelingLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textPostFeelingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/post_feeling_label"
        android:textSize="16sp"
        android:layout_marginTop="12dp"

        app:layout_constraintTop_toBottomOf="@id/spinnerPreFeeling"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/spinnerPostFeeling"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"

        app:layout_constraintTop_toBottomOf="@id/textPostFeelingLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editDoseCount"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:hint="@string/dose_count_hint"
        android:inputType="number"
        android:autofillHints="quantity"

        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"

        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"

        app:layout_constraintTop_toBottomOf="@id/spinnerPostFeeling"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonSubmitLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/submit_log"

        app:layout_constraintTop_toBottomOf="@id/editDoseCount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>