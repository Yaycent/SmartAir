<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.DailyCheckInActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Who is filling this?"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rgAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rbAuthorChild"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Child" />

                <RadioButton
                    android:id="@+id/rbAuthorParent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parent" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="Symptoms"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/cbNightWaking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Night waking" />

            <CheckBox
                android:id="@+id/cbActivityLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity limits" />

            <CheckBox
                android:id="@+id/cbCoughWheeze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cough / Wheeze" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="Triggers"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/cbTriggerExercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exercise" />

            <CheckBox
                android:id="@+id/cbTriggerColdAir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cold air" />

            <CheckBox
                android:id="@+id/cbTriggerDustPets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dust / pets" />

            <CheckBox
                android:id="@+id/cbTriggerSmoke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smoke" />

            <CheckBox
                android:id="@+id/cbTriggerIllness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Illness" />

            <CheckBox
                android:id="@+id/cbTriggerStrongOdors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strong odors" />

            <Button
                android:id="@+id/btnSaveSymptomLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Save Check-in" />

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>