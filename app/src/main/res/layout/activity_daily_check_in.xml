<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Author Section -->
        <TextView
            android:text="Who is filling this?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioGroup
            android:id="@+id/rgAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbAuthorChild"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Child" />

            <RadioButton
                android:id="@+id/rbAuthorParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parent" />
        </RadioGroup>

        <!-- Symptoms Section -->
        <TextView
            android:text="Symptoms"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/cbNightWaking"
            android:text="Night waking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/cbActivityLimit"
            android:text="Activity limits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/cbCoughWheeze"
            android:text="Cough / Wheeze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Triggers Section -->
        <TextView
            android:text="Triggers"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/cbTriggerExercise"
            android:text="Exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/cbTriggerColdAir"
            android:text="Cold air"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/cbTriggerDustPets"
            android:text="Dust / pets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/cbTriggerSmoke"
            android:text="Smoke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/cbTriggerIllness"
            android:text="Illness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/cbTriggerStrongOdors"
            android:text="Strong odors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Save button -->
        <Button
            android:id="@+id/btnSaveSymptomLog"
            android:text="Save Check-in"
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
