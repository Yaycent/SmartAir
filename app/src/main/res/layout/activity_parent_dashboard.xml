<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7EC"
    tools:context=".ParentDashboardActivity">

    <!-- Header Title -->
    <TextView
        android:id="@+id/tvHiParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="Hi, Parent"
        android:textColor="#000000"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvViewingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Viewing:"
        android:textSize="16sp"
        android:textColor="#333333"
        app:layout_constraintStart_toStartOf="@id/tvHiParent"
        app:layout_constraintTop_toBottomOf="@id/tvHiParent" />

    <View
        android:id="@+id/bottomBarBackground"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#F5A849"
        app:layout_constraintBottom_toBottomOf="parent" />


    <!-- Child management section -->
    <TextView
        android:id="@+id/buttonAddChild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Manage\nChildren"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/bottomBarBackground" />


    <!-- Rescue Summary -->
    <Spinner
        android:id="@+id/spinnerChildren"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/spinner_button_style"
        android:backgroundTint="#F5A849"
        app:layout_constraintBottom_toBottomOf="@id/tvViewingLabel"
        app:layout_constraintStart_toEndOf="@id/tvViewingLabel"
        app:layout_constraintTop_toTopOf="@id/tvViewingLabel" />

    <TextView
        android:id="@+id/tooltipBubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_tooltip_bubble"
        android:text="Go to Child Mode"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:alpha="0"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tvGoToChildDashboard"
        app:layout_constraintStart_toStartOf="@+id/tvGoToChildDashboard"
        app:layout_constraintEnd_toEndOf="@+id/tvGoToChildDashboard" />

    <ImageView
        android:id="@+id/tvGoToChildDashboard"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/_925740"
        android:contentDescription="Child Dashboard"
        android:layout_marginBottom="10dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <!-- Medication Inventory Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMedicationInventory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/spinnerChildren"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/form_border">

            <TextView
                android:id="@+id/textInventoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medicine Inventory"
                android:textColor="#333333"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/buttonAddMedicine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Medicine"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:backgroundTint="#F5A623"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Medicine List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerMedicineInventory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/textInventoryTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- NEW: Weekly Uses inside card bottom -->
            <TextView
                android:id="@+id/tvRescueSummary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="16dp"
                android:text="Rescue | Weekly uses: - | Last use: -"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="#F5A623"
                app:layout_constraintTop_toBottomOf="@id/recyclerMedicineInventory"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Setting button -->
    <TextView
        android:id="@+id/btnSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:text="Setting"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/bottomBarBackground" />


    <!-- PEF Section Header -->
    <Spinner
        android:id="@+id/spinnerTimeRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/cardMedicationInventory"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- PEF Chart -->
    <TextView
        android:id="@+id/textViewTodayPEFZone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="Today's Zone: -"
        android:textColor="#4CAF50"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/spinnerTimeRange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/spinnerTimeRange"
        app:layout_constraintVertical_bias="0.0" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chartPEF"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:background="#0DF5A623"
        app:layout_constraintTop_toBottomOf="@id/spinnerTimeRange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logout -->
    <TextView
        android:id="@+id/tvLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="#757575"
        android:padding="8dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
