<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7EC"
    tools:context=".ParentDashboardActivity">

    <!-- Top greeting -->
    <TextView
        android:id="@+id/tvHiParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="Hi, Parent"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Emergency Alerts -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardEmergencyAlerts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"
        android:padding="12dp"
        android:visibility="gone"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="#FFF2E5E5"
        app:layout_constraintTop_toBottomOf="@id/tvHiParent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvEmergencyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚠️ Alerts"
                android:textColor="#D32F2F"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/containerEmergencyAlerts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="6dp"
                android:padding="4dp"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Viewing label -->
    <TextView
        android:id="@+id/tvViewingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Viewing:"
        android:textColor="#333333"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tvHiParent"
        app:layout_constraintTop_toBottomOf="@id/cardEmergencyAlerts"/>

    <!-- Child selector spinner -->
    <Spinner
        android:id="@+id/spinnerChildren"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:minWidth="120dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/spinner_button_style"
        android:backgroundTint="#F5A849"
        app:layout_constraintBottom_toBottomOf="@id/tvViewingLabel"
        app:layout_constraintStart_toEndOf="@id/tvViewingLabel"
        app:layout_constraintTop_toTopOf="@id/tvViewingLabel"/>

    <!-- Scrollable area -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerChildren"
        app:layout_constraintBottom_toTopOf="@id/bottomBarBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <!-- Medicine Inventory Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMedicationInventory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/form_border"
                    android:padding="18dp">

                    <TextView
                        android:id="@+id/textInventoryTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medicine Inventory"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <Button
                        android:id="@+id/buttonAddMedicine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#F5A623"
                        android:text="Add Medicine"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerMedicineInventory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:nestedScrollingEnabled="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textInventoryTitle"/>

                    <TextView
                        android:id="@+id/tvRescueSummary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="#F5A623"
                        android:padding="10dp"
                        android:text="Rescue | Weekly uses: - | Last use: -"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/recyclerMedicineInventory"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Time Range -->
            <Spinner
                android:id="@+id/spinnerTimeRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/cardMedicationInventory"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/textViewTodayPEFZone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Zone: -"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginEnd="16dp"
                android:textColor="#4CAF50"
                app:layout_constraintTop_toTopOf="@id/spinnerTimeRange"
                app:layout_constraintBottom_toBottomOf="@id/spinnerTimeRange"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- PEF chart -->

            <!-- Symptom History button -->

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chartPEF"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:background="#0DF5A623"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spinnerTimeRange" />

            <Button
                android:id="@+id/buttonSymptomHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:paddingVertical="12dp"
                android:text="Symptom History"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#F5A423"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/chartPEF"/>

            <TextView
                android:id="@+id/tvLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="#757575"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/buttonSymptomHistory"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Bar -->
    <View
        android:id="@+id/bottomBarBackground"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#F5A849"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Manage Children -->
    <TextView
        android:id="@+id/buttonAddChild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Manage\nChildren"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="14sp"
        android:gravity="center"
        android:lines="2"
        app:drawableTopCompat="@drawable/ic_manage_children"
        android:drawablePadding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bottomBarBackground"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Invite Code -->
    <TextView
        android:id="@+id/btnGenerateCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Invite\nCode"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="14sp"
        android:gravity="center"
        android:lines="2"
        app:drawableTopCompat="@drawable/ic_invite_code"
        android:drawablePadding="4dp"

        app:layout_constraintTop_toTopOf="@id/bottomBarBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonAddChild"
        />


    <!-- Settings -->
    <TextView
        android:id="@+id/btnSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="Settings"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        app:drawableTopCompat="@drawable/ic_settings"
        android:drawablePadding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/bottomBarBackground"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Child Dashboard Button -->
    <FrameLayout
        android:id="@+id/tvGoToChildDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:elevation="10dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/circleBackground"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_background"/>

        <ImageView
            android:id="@+id/ivMonsterIcon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:src="@drawable/_925740"
            android:contentDescription="Child Dashboard Icon"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
