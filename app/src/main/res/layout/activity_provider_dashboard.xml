<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F8"
    tools:context=".ProviderDashboardActivity">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHiParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi, Doctor"
                android:textColor="#202124"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient Overview"
                android:textColor="#5F6368"
                android:textSize="12sp" />
        </LinearLayout>




        <Button
            android:id="@+id/btnLinkParent"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="+ Link Parent"
            android:textSize="12sp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:insetTop="0dp"
            android:insetBottom="0dp"/>
    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/filterBar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <!-- Emergency Alerts Box -->
            <LinearLayout
                android:id="@+id/layoutEmergencyAlerts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_margin="16dp"
                android:padding="12dp"
                android:background="#FFF2E5E5"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/topBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tvEmergencyProviderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚠️ Emergency Alerts"
                    android:textColor="#D32F2F"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:id="@+id/layoutAlertList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="6dp"
                    android:padding="4dp"/>

            </LinearLayout>

            <!-- Filter Bar (Viewing Patient) -->
            <LinearLayout
                android:id="@+id/filterBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                app:layout_constraintTop_toBottomOf="@id/layoutEmergencyAlerts">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Viewing Patient:"
                    android:textColor="#757575"
                    android:textStyle="bold"
                    android:layout_marginEnd="10dp"/>

                <Spinner
                    android:id="@+id/spinnerPatients"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:minWidth="150dp"
                    android:background="@drawable/spinner_button_style"
                    android:backgroundTint="#E3F2FD" />
            </LinearLayout>

            <Button
                android:id="@+id/btnOneTapTriage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="One-Tap Triage"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#448AFF"
                android:paddingVertical="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/buttonSymptomHistory"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMedicationInventory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/form_border"
                    android:padding="18dp">

                    <TextView
                        android:id="@+id/textInventoryTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medicine Inventory"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerMedicineInventory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:nestedScrollingEnabled="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textInventoryTitle" />

                    <TextView
                        android:id="@+id/tvRescueSummary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="#F5A623"
                        android:padding="10dp"
                        android:text="Rescue | Weekly uses: - | Last use: -"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/recyclerMedicineInventory" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <Spinner
                android:id="@+id/spinnerTimeRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/cardMedicationInventory"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textViewTodayPEFZone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="Today's Zone: -"
                android:textColor="#4CAF50"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/spinnerTimeRange"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/spinnerTimeRange" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chartPEF"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:background="#0DF5A623"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.625"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spinnerTimeRange" />

            <Button
                android:id="@+id/buttonSymptomHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Symptom History"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#F5A423"
                android:paddingVertical="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@id/chartPEF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvLogoutProvider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Log out"
                android:textColor="#BDBDBD"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/buttonSymptomHistory"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>