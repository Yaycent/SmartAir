<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp">

    <TextView
        android:id="@+id/textMedicineName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/medicine_name"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView
        android:id="@+id/textStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="@drawable/status_tag_bg"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/textMedicineName"
        app:layout_constraintStart_toEndOf="@+id/textMedicineName"
        app:layout_constraintTop_toTopOf="@+id/textMedicineName" />

    <TextView
        android:id="@+id/textDose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="35/200"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textExpiryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exp: 2025-12-31"
        android:textColor="#888888"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDose" />

    <TextView
        android:id="@+id/textMedicineType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rescue"
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textMedicineName" />

    <TextView
        android:id="@+id/textDosePerUse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/each_use_1"
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textMedicineType" />

    <TextView
        android:id="@+id/textReplacement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Needs replacement"
        android:textColor="#D32F2F"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textDosePerUse" />

</androidx.constraintlayout.widget.ConstraintLayout>